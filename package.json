{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "lint": "xo src",
    "lint:fix": "xo src --fix",
    "test": "ava --serial",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "posttest:docker": "docker-compose down --rmi local",
    "release": "lerna publish"
  },
  "keywords": [
    "endb",
    "key-value",
    "cache",
    "javascript"
  ],
  "license": "MIT",
  "author": "chroventer (https://github.com/chroventer)",
  "homepage": "https://endb.js.org",
  "repository": "chroventer/endb",
  "bugs": "https://github.com/chroventer/endb/issues",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "8.3.4",
    "ava": "^3.7.1",
    "lerna": "^3.20.2",
    "husky": "^4.2.5",
    "xo": "^0.30.0"
  },
  "ava": {
    "timeout": "30s",
    "files": [
      "!test/functions.js"
    ]
  },
  "xo": {
    "prettier": true,
    "rules": {
      "guard-for-in": 0,
      "no-negated-condition": 0,
      "no-await-in-loop": 0,
      "unicorn/explicit-length-check": 0,
      "unicorn/no-fn-reference-in-iterator": 0
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  }
}
